{
  "name": "release-gen",
  "description": "Generate release version and notes",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint src/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "build-old": "ncc build src/index.ts --minify; rm dist/package.json",
    "build": "ncc build src/index.ts --external semantic-release; rm dist/package.json",
    "run": "node index.js",
    "test-it": "node dist/index.js"
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "semantic-release": "^24.0.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.0.0",
    "@types/node": "^20.0.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.9.0",
    "eslint-plugin-import": "^2.31.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.2.0"
  }
}
